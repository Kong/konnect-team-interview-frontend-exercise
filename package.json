{
  "name": "konnect-team-interview-frontend-exercise",
  "version": "0.0.0-development",
  "description": "Konnect Team Interview Frontend Exercise",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kong/konnect-team-interview-frontend-exercise.git"
  },
  "private": true,
  "scripts": {
    "dev": "vite",
    "server": "json-server --watch db/index.js --routes db/routes.json --port 4001",
    "build": "yarn typecheck && vite build",
    "commit": "cz",
    "preview": "vite preview --port 5050",
    "test:unit": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest run --coverage",
    "test:component": "cypress run --component -b chrome",
    "test:component:open": "cypress open --component -b chrome",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint '**/*.{js,jsx,ts,tsx,vue}'",
    "lint:fix": "eslint '**/*.{js,jsx,ts,tsx,vue}' --fix"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "pinia": "^2.0.23",
    "vue": "^3.2.40",
    "vue-router": "^4.1.5"
  },
  "devDependencies": {
    "@babel/types": "^7.19.4",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@cypress/vite-dev-server": "^3.3.1",
    "@cypress/vue": "^4.2.0",
    "@digitalroute/cz-conventional-changelog-for-jira": "^7.4.1",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/node": "^18.8.4",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "@vitejs/plugin-vue": "^3.1.2",
    "@vitest/ui": "^0.24.1",
    "@vue/eslint-config-standard": "^8.0.1",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/tsconfig": "^0.1.3",
    "autoprefixer": "^10.4.12",
    "axios-mock-adapter": "^1.21.2",
    "c8": "^7.12.0",
    "commitizen": "^4.2.5",
    "cypress": "^10.10.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.25.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-vue": "^9.6.0",
    "faker": "^5.2.0",
    "jsdom": "^20.0.1",
    "json-server": "^0.17.0",
    "postcss-cli": "^10.0.0",
    "postcss-custom-properties": "^12.1.9",
    "sass": "^1.55.0",
    "start-server-and-test": "^1.14.0",
    "typescript": "~4.8.4",
    "vite": "^3.1.7",
    "vitest": "^0.24.1",
    "vue-tsc": "^1.0.6"
  },
  "author": {
    "name": "Kong Inc.",
    "url": "https://konghq.com/"
  },
  "volta": {
    "node": "16.15.1",
    "yarn": "1.22.17"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira",
      "skipScope": false,
      "jiraOptional": true,
      "jiraLocation": "post-description",
      "jiraPrepend": "[",
      "jiraAppend": "]"
    }
  }
}
